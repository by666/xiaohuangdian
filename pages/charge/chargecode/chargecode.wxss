.chargecode_join_image{
   width: 100%;
  height: 400rpx;
}

.chargecode_body_view{
  width: 100%;
  height: 686rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.chargecode_psw_title{
   color: black;
   font-size: 30rpx;
   margin-top: 30rpx;
}

.chargecode_items{
  width: 15%;
  height: 100rpx;
  display: inline-block;
  margin-left: 8%;
  border-color: #FF7F50;
  border-radius: 10%;
  border-style: dashed;
  border-width: 1px;
}

.chargecode_item_text{
   font-size: 60rpx;
   line-height: 100rpx;
   display: flex;
   flex-direction: column;
   color: skyblue;
   font-weight: bold;
   align-items: center;
}

.chargecode_scrollview {
   margin-top: 50rpx;
   height: 120rpx;
   width: 100%;
   white-space: nowrap;
   display: flex;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.chargecode_time_txt{
  margin-top: 20rpx;
}

.chargecode_time_txt2{
  margin-top: 20rpx;
  font-size: 60rpx;
  font-weight: bolder;
  color: skyblue;
}


.charge_code_btnview{
  margin-top: 30rpx;
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-evenly;
}

.chargecode_btn{
  width: 40%;
}


.chargecode_tips_view{
  width: 100%;
  height: 120rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.chargecode_tips_txt{
  color: grey;
  font-size: 30rpx;
  margin-left: 100rpx;
  align-items: flex-start;
}

