.chargecode_join_image{
  width: 100%;
}

.chargecode_psw_title{
   color: black;
   font-size: 40rpx;
   margin-top: 100rpx;
}

.chargecode_items{
  width: 14%;
  height: 100rpx;
  display: inline-block;
  margin-left: 5%;
  border-color: #FF7F50;
  border-radius: 10%;
  border-style: dashed;
  border-width: 1px;
}

.chargecode_item_text{
   font-size: 60rpx;
   line-height: 100rpx;
   display: flex;
   flex-direction: column;
   color: skyblue;
   font-weight: bold;
   align-items: center;
}

.chargecode_scrollview {
   margin-top: 100rpx;
   height: 120rpx;
   width: 100%;
   white-space: nowrap;
   display: flex;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
