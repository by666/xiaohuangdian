/**tabbar**/
Page {
  width: 100%;
  height: 100%;
  background: #FAFAFA;
  overflow-y: hidden;
  font-size: 30rpx;
}

.swiper-tab{
    width: 100%;
    border-bottom: 2rpx solid #ccc;
    text-align: center;
    height: 88rpx;
    line-height: 88rpx;
    display: flex;
    flex-flow: row;
    justify-content: space-between;
}
.swiper-tab-item{
    width: 30%; 
    color:#434343;
}
.active{
    color:#F65959;
    border-bottom: 4rpx solid #F65959;
}


/**item**/
.order_item{
    width: 100%;
    height: auto;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.order_view{
   width: 90%;
   height: 500rpx;
   border-style: solid;
   border-width: 1px;
   border-radius: 8px;
   border-color: gainsboro;
   margin-top: 20rpx;
   margin-bottom: 20rpx;
}

.order_view .top{
  height: 100rpx;
  border-bottom: solid 1rpx gainsboro;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding-left: 20rpx;
  padding-right: 20rpx;
}

.order_view .top .statu_txt{
  color: #F65959;
}

.order_view .center{
  height: 160rpx;
  border-bottom: solid 1rpx gainsboro;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding:20rpx;
}

.order_view .bottom{
    height: 200rpx;
   padding: 20rpx;
}

.order_view .bottom .row1{
    display: flex;
   flex-direction: row;
   justify-content: space-between;


}

.order_view .bottom .row2{
   display: flex;
   flex-direction: row;
   justify-content: space-between;
   margin-top: 30rpx;

}

.order_view .bottom .row2 .pay_btn{
   font-size: 30rpx;
   margin-left: 0;
   
}

.order_view .bottom .row2 .pay_txt{
  font-size: 50rpx;
  color: red;
}