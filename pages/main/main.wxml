<view class='page_main'>
<view class='page_main_content'>
   <view class='view_top'>
     <view class="img_head" bindtap='onHeadTap'>
   <open-data type="userAvatarUrl"mode='aspectFill' ></open-data>
   </view>
     <button class="btn_position" bindtap='onLocationTap'>搜索位置查找附近的充电器</button>
     <image class='img_menu' src='/imgs/ic_menu.png' mode='aspectFill' bindtap='onMenuTap'></image>
   </view>

<map id="map" longitude="{{longitude}}" latitude="{{latitude}}" scale="16" controls="{{controls}}" bindcontroltap="controltap" markers="{{markers}}" bindmarkertap="markertap" polyline="{{polyline}}" bindregionchange="regionchange" show-location class="mapview">
</map>

</view>

</view>
